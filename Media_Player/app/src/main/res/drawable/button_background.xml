<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient android:startColor="@color/red"
                android:endColor="@color/darkred"/>
            <corners android:radius="25dp"/>
